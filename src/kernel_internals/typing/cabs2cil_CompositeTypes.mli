(** Cabs2cil some helpers for handling composite type fields, and creating
    compinfo and enuminfo. *)

open Cil_types

module CompInfo : sig

  (** Create the self ref cell and add it to the map. Return an indication
      whether this is a new one. *)
  val createCompInfo : bool -> string -> norig:string -> compinfo * bool

  (** Create the self ref cell and add it to the map. Return an indication
      whether this is a new one. *)
  val createEnumInfo : string -> norig:string -> enuminfo * bool

  val clear_env : unit -> unit

end


module CompField : sig

  (** The constant string used to construct the names of anonymous fields of
      composite types. *)
  val anonCompFieldName : string

  (** Generate the next unique name for an anonymous composite type field. *)
  val nextAnonCompFieldNameWithId : unit -> string

  (** [find_field_offset cond fidlist] returns the offset (can be more than one
      field in case of unnamed members) corresponding to the first field matching
      the condition [cond].
      @raise Not_found if no such field exists.
  *)
  val find_field_offset : (fieldinfo -> bool) -> fieldinfo list -> offset

  (** Like [find_field_offset] but abort if no such field exists. *)
  val findField : string -> fieldinfo list -> offset


  val clear_env : unit -> unit

end
